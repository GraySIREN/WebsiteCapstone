@*CSS*@
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Montserrat', sans-serif;
        background: #D0D8DB;
        padding-top: 60px;
        padding-bottom: 40px;
        background: linear-gradient(to right, #eee, #133337);
        margin-bottom: 50px; /* Adjust this value to leave enough space for the icons */
    }

    .navbar {
        font-family: 'Montserrat', sans-serif;
        display: flex;
        justify-content: center;
        vertical-align: middle;
        color: white !important;
        background: #133337;
        border: solid 2px white;
        border-radius: 25px;
    }

    .nav-link {
        font-family: 'Montserrat', sans-serif;
        display: flex;
        color: white !important;
    }

    @@charset "UTF-8";

    .svg-inline--fa {
        vertical-align: -0.200em;
    }


    .rounded-social-buttons {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

        .rounded-social-buttons .social-button {
            display: inline-block;
            cursor: pointer;
            width: 3.125rem;
            height: 3.125rem;
            border: 0.125rem solid transparent;
            padding: 10px;
            text-decoration: none;
            color: #fefefe;
            font-size: 1.5625rem;
            border-radius: 1.6875rem;
            transition: all 0.5s ease;
            margin-right: 0.25rem;
        }

            .rounded-social-buttons .social-button:hover, .rounded-social-buttons .social-button:focus {
                align-content: center;
                justify-content: center;
                -webkit-transform: rotate(720deg);
                -ms-transform: rotate(360deg);
                transform: rotate(360deg);
            }



        .rounded-social-buttons .fa-github, .fa-portfolio, .fa-facebook-f, .fa-linkedin, .fa-soundcloud, .fa-instagram {
            font-size: 25px;
        }

        .rounded-social-buttons .social-button.github {
            background: #282a36;
        }

            .rounded-social-buttons .social-button.github:hover, .rounded-social-buttons .social-button.github:focus {
                color: #3b5998;
                background: #282a36;
                border-color: #3b5998;
            }

        .rounded-social-buttons .social-button.facebook {
            background: #3b5998;
        }

            .rounded-social-buttons .social-button.facebook:hover, .rounded-social-buttons .social-button.facebook:focus {
                color: #3b5998;
                background: #fefefe;
                border-color: #3b5998;
            }

        .rounded-social-buttons .social-button.portfolio {
            background: #00cccc;
        }

            .rounded-social-buttons .social-button.portfolio:hover, .rounded-social-buttons .social-button.portfolio:focus {
                color: #00cccc;
                background: #fefefe;
                border-color: #00a693;
            }

        .rounded-social-buttons .social-button.linkedin {
            background: #007bb5;
        }

            .rounded-social-buttons .social-button.linkedin:hover, .rounded-social-buttons .social-button.linkedin:focus {
                color: #007bb5;
                background: #fefefe;
                border-color: #007bb5;
            }

        .rounded-social-buttons .social-button.soundcloud {
            background: #f50;
        }

            .rounded-social-buttons .social-button.soundcloud:hover, .rounded-social-buttons .social-button.soundcloud:focus {
                color: #f50;
                background: #fefefe;
                border-color: #bb0000;
            }

        .rounded-social-buttons .social-button.instagram {
            background: #cd486b;
        }

            .rounded-social-buttons .social-button.instagram:hover, .rounded-social-buttons .social-button.instagram:focus {
                color: #cd486b;
                background: #fefefe;
                border-color: #8a3ab9;
            }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebsiteCapstone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsiteCapstone.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Website Capstone</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @* Add my own unique View *@
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="MediaPortfolio">MediaPortfolio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Social">Social</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="BlackJack">BlackJack</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div>
        <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/all.js" integrity="sha384-xymdQtn1n3lH2wcu0qhcdaOpQwyoarkgLVxC/wZ5q7h9gHtxICrpcaSUfygqZGOe" crossorigin="anonymous"></script>


        <footer>
            <div class="rounded-social-buttons">
                <a class="social-button github" href="https://github.com/GraySIREN" target="_blank"><i class="fab fa-github"></i></a>
                <a class="social-button facebook" href="https://www.facebook.com/aaron.gray.735" target="_blank"><i class="fab fa-facebook-f"></i></a>
                <a class="social-button portfolio" href="https://agray2195.wixsite.com/sirenmediaproduction" target="_blank"><i class="fab fa-portfolio"></i></a>
                <a class="social-button linkedin" href="https://www.linkedin.com/in/aaron-gray-creative/" target="_blank"><i class="fab fa-linkedin"></i></a>
                <a class="social-button soundcloud" href="https://soundcloud.com/user-77106647" target="_blank"><i class="fab fa-soundcloud"></i></a>
                <a class="social-button instagram" href="https://www.instagram.com/itzz_siren/" target="_blank"><i class="fab fa-instagram"></i></a>
            </div>
        </footer>
    </div>

    @*Partial view or component | footer*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>




