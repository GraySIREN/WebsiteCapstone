        {
            //Random rng = new Random();
            int n = Cards.Count;
            while (n > 1)
            {
                n--;
                int k = rng.Next(n + 1);
                Card value = Cards[k];
                Cards[k] = Cards[n];
                Cards[n] = value;
            }
        }

        //Method
        public Card DealCard()
        {
            Card card = Cards[0];
            Cards.RemoveAt(0);
            return card;
        }
    }

