    /* Style for the card container */
    .card-container {
        margin: 0;
        display: flex; /* Use flexbox to create a row */
        justify-content: space-around; /* Distribute space evenly between cards */
        flex-wrap: wrap; /* Allow cards to wrap to the next row if necessary */
